<h1>Items in Category: {{category}}</h1>

<div class="container">
  <div class="row" style="height: 100vh;">

    {{#each items}}
      <div class="col-md-12 mb-5">
        <div class="item-container" style="background: linear-gradient(to bottom, #ECF0F1, #ffffff); padding: 20px;">
          <div class="row align-items-center">
            <div class="col-md-6">
              <div class="aspect-ratio aspect-ratio-4x3" style="position: relative; max-width: 100%; max-height: 75%; overflow: hidden;">
                <div class="image-container">
                  <img src="{{imageUrl}}" class="item-img" alt="{{name}}" style="width: 50%; height: 50%; object-fit: contain;">
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="item-details text-left">
                <h3><a href="/items/{{_id}}" class="card-title" style="font-size: 1.5rem; text-decoration: none; color: #333; font-family: 'Helvetica', sans-serif;">{{name}}</a></h3>
                <p class="item-text" style="color: #555;">Category: {{category}}</p>
                <p class="item-text" style="color: #555;">Description: {{description}}</p>
                <p class="item-text" style="color: #555;">Price: {{price}}</p>
               </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}

  </div>
</div>