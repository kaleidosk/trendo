<div class="container">
  <div class="row" style="height: 100vh;">
    <div class="col-md-12 mb-5">
      <div class="item-container" style="background: linear-gradient(to bottom, #ECF0F1, #ffffff); padding: 20px;">
        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="aspect-ratio aspect-ratio-4x3" style="position: relative; max-width: 100%; max-height: 75%; overflow: hidden;">
              <div class="image-container">
                <img src="{{item.imageUrl}}" class="item-img" alt="{{item.name}}" style="width: 100%; height: 100%; object-fit: contain;">
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="item-details text-left">
              <h6 class="item-title" style="font-size: 1.2rem; color: #333; font-family: 'Helvetica', sans-serif;">Name: {{item.name}}</h6>
              <p class="item-text" style="color: #555;">Category: {{item.category}}</p>
              <p class="item-text" style="color: #555;">Description: {{item.description}}</p>
              <p class="item-text" style="color: #555;">Price: {{item.price}} € per day</p>
              <p style="color: #777;">Owned by {{item.ownerId.username}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





